{
  "bitcoin_sources": [
    {
      "name": "Bitcoin Optech",
      "url": "https://bitcoinops.org/en/newsletters/",
      "type": "newsletter",
      "check_frequency": "weekly",
      "relevance_keywords": [
        "wallet",
        "security",
        "BIP",
        "taproot",
        "lightning",
        "multisig",
        "privacy",
        "transaction",
        "fees"
      ],
      "affects_modules": ["security", "wallets", "transactions", "lightning"]
    },
    {
      "name": "Bitcoin Magazine",
      "url": "https://bitcoinmagazine.com/",
      "type": "news",
      "check_frequency": "daily",
      "relevance_keywords": [
        "scam",
        "phishing",
        "hack",
        "security breach",
        "wallet vulnerability",
        "regulation",
        "adoption"
      ],
      "affects_modules": ["security", "scams", "current-events"]
    },
    {
      "name": "Bitcoin Core GitHub",
      "url": "https://github.com/bitcoin/bitcoin/releases",
      "type": "releases",
      "check_frequency": "weekly",
      "relevance_keywords": [
        "release",
        "security fix",
        "feature",
        "breaking change"
      ],
      "affects_modules": ["technical", "wallets", "nodes"]
    },
    {
      "name": "Lightning Network",
      "url": "https://github.com/lightningnetwork/lnd/releases",
      "type": "releases",
      "check_frequency": "weekly",
      "relevance_keywords": [
        "release",
        "channel",
        "payment",
        "routing",
        "security"
      ],
      "affects_modules": ["lightning"]
    },
    {
      "name": "Common Wallet Scams Database",
      "url": "https://www.bitcoin.org/en/scams",
      "type": "reference",
      "check_frequency": "monthly",
      "relevance_keywords": [
        "fake wallet",
        "phishing",
        "social engineering",
        "impersonation"
      ],
      "affects_modules": ["security", "scams"]
    }
  ],
  "module_mapping": {
    "security": [
      "paths/*/stage-*/module-*-security*.html",
      "paths/*/stage-*/module-*-wallet*.html"
    ],
    "wallets": [
      "paths/*/stage-*/module-*-wallet*.html"
    ],
    "transactions": [
      "paths/*/stage-*/module-*-transaction*.html"
    ],
    "lightning": [
      "paths/*/stage-*/module-*-lightning*.html",
      "paths/pragmatist/stage-2/module-6-lightning.html"
    ],
    "scams": [
      "paths/*/stage-*/module-*-security*.html"
    ],
    "technical": [
      "paths/builder/**/*.html",
      "paths/sovereign/**/*.html"
    ],
    "current-events": [
      "deep-dives/**/*.html"
    ]
  },
  "update_settings": {
    "auto_create_pr": true,
    "require_manual_review": true,
    "max_updates_per_pr": 5,
    "severity_threshold": "medium",
    "notification_channels": ["github_issues"]
  }
}
