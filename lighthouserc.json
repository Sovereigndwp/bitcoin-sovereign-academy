{
  "ci": {
    "collect": {
      "url": [
        "https://sovereigndwp.github.io/bitcoin-sovereign-academy/",
        "https://sovereigndwp.github.io/bitcoin-sovereign-academy/ai-agents/",
        "https://sovereigndwp.github.io/bitcoin-sovereign-academy/modules/cbdc-vs-bitcoin.html"
      ],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": ["--no-sandbox", "--headless"]
      }
    },
    "assert": {
      "assertions": {
        "categories:seo": ["error", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["warn", {"minScore": 0.8}],
        "categories:performance": ["warn", {"minScore": 0.7}],
        "meta-description": "error",
        "document-title": "error",
        "is-crawlable": "error",
        "structured-data": "warn",
        "image-alt": "error",
        "link-text": "warn",
        "viewport": "error"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}