{
  "name": "bitcoin-sovereign-academy",
  "version": "1.0.0",
  "type": "module",
  "description": "Bitcoin Sovereign Academy - Interactive Learning Platform",
  "main": "server-local.js",
  "scripts": {
    "start": "NODE_ENV=production node server-local.js",
    "dev": "NODE_ENV=development node server-local.js",
    "dev:api": "vercel dev",
    "serve:static": "python3 -m http.server 8080",
    "serve:secure": "npm run cert && npm start",
    "cert": "openssl req -nodes -new -x509 -keyout server.key -out server.cert -days 365 -subj '/CN=localhost'",
    "test": "echo \"Testing local server...\" && curl -s http://localhost:3000/api/health | jq .",
    "domain:configure": "node tools/domain-config.js --setup",
    "domain:verify": "node tools/domain-config.js --verify --report",
    "domain:dns": "node tools/domain-config.js --dns",
    "domain:ssl": "node tools/domain-config.js --ssl",
    "domain:perf": "node tools/domain-config.js --performance",
    "domain:test": "node tools/domain-test-suite.js",
    "domain:test:all": "node tools/domain-test-suite.js --all",
    "domain:test:subs": "node tools/domain-test-suite.js --all --subdomains",
    "domain:report": "node tools/domain-config.js --report",
    "domain:monitor": "node tools/domain-monitor.js start",
    "domain:monitor:status": "node tools/domain-monitor.js status",
    "domain:dashboard": "open tools/domain-dashboard.html",
    "deploy": "node tools/deploy-automation.js deploy",
    "deploy:quick": "node tools/deploy-automation.js deploy --skip-tests",
    "deploy:status": "node tools/deploy-automation.js status",
    "deploy:rollback": "node tools/deploy-automation.js rollback",
    "seo:analyze": "node tools/seo-optimizer.js",
    "seo:fix": "node tools/seo-optimizer.js --fix",
    "security:analyze": "node tools/security-headers.js",
    "security:fix": "node tools/security-headers.js --fix",
    "content:validate": "node tools/content-validator.js",
    "test:modules": "node --test tests/module-gate.test.mjs",
    "audit:all": "npm run seo:analyze && npm run security:analyze && npm run content:validate",
    "optimize:all": "npm run seo:fix && npm run security:fix",
    "audit:seo": "lhci autorun --config=./lighthouserc.json",
    "audit:html": "html-validate '**/*.html' --ignore 'node_modules/**' || true",
    "audit:lighthouse": "npm run audit:seo",
    "audit:complete": "npm run audit:all && npm run audit:html && npm run audit:seo",
    "deploy:preview": "vercel --prod",
    "deploy:production": "vercel --prod --scope bitcoin-sovereign-academy",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path lighthouse-report.html",
    "build:sw": "workbox generateSW workbox-config.js",
    "build:utils": "tsc -p tsconfig.utils.json"
  },
  "keywords": [
    "bitcoin",
    "education",
    "sovereign",
    "academy",
    "interactive",
    "learning",
    "mcp",
    "pwa"
  ],
  "author": "Bitcoin Sovereign Academy",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/pg": "^8.16.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.17.1",
    "stripe": "^17.4.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.11.0",
    "@vercel/node": "^3.0.21",
    "html-validate": "^10.0.0",
    "jsdom": "^23.2.0",
    "lighthouse": "^11.0.0",
    "open": "^9.1.0",
    "typescript": "^5.9.3",
    "vercel": "^32.0.0",
    "workbox-cli": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
