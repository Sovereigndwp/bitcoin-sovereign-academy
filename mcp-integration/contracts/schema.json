{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Agent Task Contract",
  "description": "Standard task schema for MCP agent coordination",
  "type": "object",
  "required": ["id", "title", "priority", "owner", "status", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^TASK-\\d{8}-\\d{3}$",
      "description": "Unique task ID in format TASK-YYYYMMDD-###",
      "example": "TASK-20251005-001"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Clear, actionable task title"
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "description": "Task priority level"
    },
    "owner": {
      "type": "string",
      "enum": ["planner", "perf-seo", "content", "accessibility", "security", "curriculum", "analytics"],
      "description": "Agent responsible for executing this task"
    },
    "inputs": {
      "type": "object",
      "description": "Input parameters specific to the task",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "thresholds": {
          "type": "object"
        },
        "files": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "acceptance": {
      "type": "array",
      "items": {"type": "string"},
      "description": "List of acceptance criteria that must be met"
    },
    "status": {
      "type": "string",
      "enum": ["open", "in-progress", "ready-for-review", "completed", "blocked", "cancelled"],
      "description": "Current task status"
    },
    "assigned_to": {
      "type": "string",
      "description": "Human or bot assigned to review/approve"
    },
    "branch": {
      "type": "string",
      "description": "Git branch created for this task"
    },
    "pr_url": {
      "type": "string",
      "format": "uri",
      "description": "Pull request URL if created"
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {"type": "string", "format": "date-time"},
          "author": {"type": "string"},
          "message": {"type": "string"}
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
